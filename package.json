{
  "name": "tcon",
  "version": "1.0.5",
  "description": "简化版 tachyons",
  "main": "dist/tcon.css",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "size": "stylus src/size/index.styl -o ./dist/size.css",
    "layout": "stylus src/layout/index.styl -o ./dist/layout.css",
    "color": "stylus src/color/index.styl -o ./dist/color.css",
    "text": "stylus src/text/index.styl -o ./dist/text.css",
    "border": "stylus src/border/index.styl -o ./dist/border.css",
    "shadow": "stylus src/shadow/index.styl -o ./dist/shadow.css",
    "button": "stylus src/button/index.styl -o ./dist/button.css",
    "reset": "stylus src/reset/index.styl -o ./dist/reset.css",
    "pc": "stylus src/pc/index.styl -o ./dist/pc.css",
    "release": "stylus src/index.styl -o ./dist/tcon.css --compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/visualization-page/tachyons-lite.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/visualization-page/tachyons-lite/issues"
  },
  "homepage": "https://github.com/visualization-page/tachyons-lite#readme",
  "dependencies": {
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "vuepress": "^0.14.8"
  }
}
