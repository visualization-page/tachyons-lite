$oh
  overflow hidden
$oa
  overflow auto
$vt
  vertical-align top
$vm
  vertical-align middle

$two-line
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical

$center
  top 50%
  left 50%
  transform translate(-50%, -50%)
